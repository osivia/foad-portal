<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>


    <dependencySets>
        <dependencySet>
            <outputDirectory>/${artifactId}-${dest-env}-${project.version}/custom/deploy</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <!-- FOAD -->
                <include>${project.groupId}:foad-charte-tribin:war:${project.version}</include>
            </includes>
        </dependencySet>
        
    </dependencySets>


    <fileSets>
        <!-- Socle -->
        <fileSet>
            <outputDirectory>/${artifactId}-${dest-env}-${project.version}</outputDirectory>
            <directory>target/foad-distribution/foad-distribution-${dest-env}-${project.version}</directory>
            <includes>
                <include>/**</include>
            </includes>
            
            <excludes>
                <exclude>custom/deploy/foad-charte-${project.version}.*</exclude>

            </excludes>
        </fileSet>

    </fileSets>


</assembly>
