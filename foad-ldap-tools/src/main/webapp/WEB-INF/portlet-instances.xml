<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portal/dtd/portlet-instances_2_6.dtd">

<deployments>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">foad - Integrity</display-name>
            <display-name xml:lang="fr">foad - Integrity</display-name>
            <instance-id>foad-integrity-instance</instance-id>
            <portlet-ref>foad-integrity</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">foad - Room</display-name>
            <display-name xml:lang="fr">foad - Room</display-name>
            <instance-id>foad-room-instance</instance-id>
            <portlet-ref>foad-room</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>
    
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">foad - migrate account</display-name>
            <display-name xml:lang="fr">foad - Migrer un compte utilisateur</display-name>
            <instance-id>foad-migrate-account-instance</instance-id>
            <portlet-ref>foad-migrate-account</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>    
</deployments>
