<?xml version="1.0" encoding="UTF-8"?>
<layouts>

    <layout>
        <name>foad-home</name>
        <uri>/layouts/home/index.jsp</uri>
        <uri state="maximized">/layouts/home/maximized.jsp</uri>
        <regions>
            <region name="top" />
            <region name="col-1" />
            <region name="col-2" />
            <region name="col-3" />
            <region name="col-4" />
        </regions>
    </layout>
    
    <layout>
        <name>foad-workspace</name>
        <uri>/layouts/workspace/index.jsp</uri>
        <uri state="maximized">/layouts/workspace/maximized.jsp</uri>
        <regions>
            <region name="col-1" />
            <region name="workspace-header-1" />
            <region name="workspace-header-2" />
            <region name="cols-top" />
            <region name="col-2" />
            <region name="col-3" />
            <region name="cols-bottom" />
        </regions>
    </layout>
    
    <layout>
        <name>foad-search</name>
        <uri>/layouts/search/index.jsp</uri>
        <uri state="maximized">/layouts/search/maximized.jsp</uri>
        <regions>
            <region name="search-toolbar" />
            <region name="search-filters" />
            <region name="search-results" />
        </regions>
    </layout>

</layouts>

