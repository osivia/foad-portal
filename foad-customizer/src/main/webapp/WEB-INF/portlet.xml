<?xml version="1.0" encoding="UTF-8" ?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">
    
    <!-- Regions customizer -->
    <portlet>
        <portlet-name>foad-regions-customizer</portlet-name>
        <portlet-class>fr.gouv.education.foad.customizer.regions.RegionsCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Regions customizer</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Internationalization customizer -->
    <portlet>
        <portlet-name>foad-internationalization-customizer</portlet-name>
        <portlet-class>fr.gouv.education.foad.customizer.internationalization.InternationalizationCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Internationalization customizer</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Feeder customizer -->
    <portlet>
        <portlet-name>foad-feeder-customizer</portlet-name>
        <portlet-class>fr.gouv.education.foad.customizer.feeder.FeederCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Feeder customizer</title>
        </portlet-info>
    </portlet>

    
    <!-- Project customizer -->
    <portlet>
        <portlet-name>foad-project-customizer</portlet-name>
        <portlet-class>fr.gouv.education.foad.customizer.project.ProjectCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Project customizer</title>
        </portlet-info>
    </portlet>

</portlet-app>

